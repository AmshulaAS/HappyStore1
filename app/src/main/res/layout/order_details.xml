<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_marginStart="100dp"
        android:textStyle="bold"
        android:textColor="#ff99cc"
        android:textSize="25dp"
        android:text="! Order Details !"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:id="@+id/image0"
        android:src="@drawable/logo1"
        android:layout_marginTop="1dp"
        android:layout_marginStart="320dp"
        android:textAlignment="textEnd"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="PLEASE FILL YOUR ORDER DETAILS"
        android:textAlignment="center"
        android:textSize="30dp"
        android:alpha="0.2"
        android:textColor="#fff"
        android:id="@+id/heading_order"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total price: "
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffff"
        android:id="@+id/tot"/>
    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:layout_marginTop="10dp"
        android:hint="Name" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:inputType="number"
        android:id="@+id/PhoneNum"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:id="@+id/Address"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pin-Code"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:id="@+id/PinCode"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ClickToConfirm"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded_corners_gradient"
        android:text="CLICK TO CONFIRM YOUR ORDER"/>

</LinearLayout>
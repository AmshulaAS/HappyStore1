<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/loginpage2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:textAlignment="center"
            android:layout_marginStart="100dp"
            android:textStyle="bold"
            android:textColor="#ff99cc"
            android:textSize="25dp"
            android:text="! Review Cart !"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:id="@+id/image0"
            android:src="@drawable/logo1"
            android:layout_marginTop="1dp"
            android:layout_marginStart="320dp"
            android:textAlignment="textEnd"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:alpha="0.6"
        android:id="@+id/myRecycler1">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
        android:textSize="30dp"
        android:textColor="#fff"
        android:text="Total Amount:"
        android:textAlignment="center"
        android:layout_below="@+id/myRecycler1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ConfirmYourOrder"
        android:text="CONFIRM YOUR ORDER"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded_corners_gradient"
        android:layout_below="@+id/sum"/>

</RelativeLayout>